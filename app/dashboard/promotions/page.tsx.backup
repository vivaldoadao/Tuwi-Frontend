                    value={packageForm.description}
                    onChange={(e) => setPackageForm(prev => ({ 
                      ...prev, 
                      description: e.target.value 
                    }))}
                    placeholder="Descri√ß√£o detalhada do pacote..."
                    rows={3}
                    required
                  />
                </div>

                <div className="grid grid-cols-2 gap-4">
                  <div>
                    <Label>Pre√ßo Final (‚Ç¨)</Label>
                    <Input
                      type="number"
                      min="0"
                      step="0.01"
                      value={packageForm.price}
                      onChange={(e) => setPackageForm(prev => ({ 
                        ...prev, 
                        price: parseFloat(e.target.value) || 0
                      }))}
                      placeholder="0.00"
                    />
                  </div>
                  
                  <div>
                    <Label>Pre√ßo Original (‚Ç¨) - Opcional</Label>
                    <Input
                      type="number"
                      min="0"
                      step="0.01"
                      value={packageForm.original_price}
                      onChange={(e) => setPackageForm(prev => ({ 
                        ...prev, 
                        original_price: parseFloat(e.target.value) || 0
                      }))}
                      placeholder="0.00"
                    />
                    <p className="text-xs text-gray-500 mt-1">Para mostrar desconto</p>
                  </div>
                </div>

                <div className="grid grid-cols-3 gap-4">
                  <div>
                    <Label>Dura√ß√£o (dias)</Label>
                    <Input
                      type="number"
                      min="1"
                      value={packageForm.duration_days}
                      onChange={(e) => setPackageForm(prev => ({ 
                        ...prev, 
                        duration_days: parseInt(e.target.value) || 1
                      }))}
                      placeholder="7"
                    />
                  </div>

                  <div>
                    <Label>Cor do Tema</Label>
                    <Input
                      type="color"
                      value={packageForm.color}
                      onChange={(e) => setPackageForm(prev => ({ 
                        ...prev, 
                        color: e.target.value 
                      }))}
                    />
                  </div>

                  <div>
                    <Label>Ordem de Exibi√ß√£o</Label>
                    <Input
                      type="number"
                      min="0"
                      value={packageForm.sort_order}
                      onChange={(e) => setPackageForm(prev => ({ 
                        ...prev, 
                        sort_order: parseInt(e.target.value) || 0
                      }))}
